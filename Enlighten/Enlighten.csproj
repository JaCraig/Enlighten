<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <BuildNumber Condition=" '$(APPVEYOR_BUILD_NUMBER)' != '' ">$(APPVEYOR_BUILD_NUMBER)</BuildNumber>
    <!-- for AppVeyor -->
    <BuildNumber Condition=" '$(BUILD_NUMBER)' != '' ">$(BUILD_NUMBER)</BuildNumber>
    <!-- for Team City -->
    <BuildNumber Condition=" '$(BuildNumber)' == '' ">0</BuildNumber>
    <!-- if not set -->
    <Description>Enlighten is a set of tools to help with natural language processing.</Description>
    <AssemblyTitle>Enlighten</AssemblyTitle>
    <Authors>James Craig</Authors>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Enlighten</AssemblyName>
    <PackageId>Enlighten</PackageId>
    <PackageTags>NLP;ML;Natural language processing;machine learning</PackageTags>
    <PackageProjectUrl>https://github.com/JaCraig/Enlighten</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>1.0.$(BuildNumber)</Version>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="POSTagger\Resources\English\rules.txt" />
    <None Remove="POSTagger\Resources\English\synonyms.txt" />
    <None Remove="POSTagger\Resources\lexicon.txt" />
    <None Remove="POSTagger\Resources\suffixes.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="POSTagger\Resources\English\lexicon.txt" />
    <EmbeddedResource Include="POSTagger\Resources\English\rules.txt" />
    <EmbeddedResource Include="POSTagger\Resources\English\suffixes.txt" />
    <EmbeddedResource Include="SynonymFinder\Resources\English\synonyms.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BigBook" Version="3.0.37" />
    <PackageReference Include="FileCurator" Version="3.1.8" />
    <PackageReference Include="System.Memory" Version="4.5.4" />
  </ItemGroup>
</Project>